<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.com.perfil.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/txt_info"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:layout_margin="8dp"
        android:text="Informações" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edt_nome_completo"
        android:layout_below="@+id/txt_info"
        android:hint="Digite seu nome completo"
        android:layout_margin="8dp"
        android:maxLines="1"
        android:inputType="textPersonName"
        android:textColorHint="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spn_renda"
        android:layout_below="@+id/edt_nome_completo"
        android:layout_alignStart="@+id/edt_nome_completo"
        android:entries="@array/rendas"
        android:layout_margin="8dp"
        android:padding="8dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edt_profissao"
        android:layout_below="@+id/spn_renda"
        android:hint="Informe sua profissão"
        android:layout_margin="8dp"
        android:maxLines="1"
        android:inputType="text"
        android:textColorHint="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Meu Perfil"
        android:id="@+id/btn_perfil"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:padding="24dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="@android:color/white"
        android:layout_margin="8dp"  />




</RelativeLayout>
