<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@drawable/fundo"
    tools:context="br.com.marcatruco.MainActivity"
    android:weightSum="1"
    tools:ignore="Overdraw">

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.09"
        android:background="#deddda"
        android:alpha="0.9"
        android:alwaysDrawnWithCache="false">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edtNome1"
            android:hint="Digite o Nome do Time"
            android:layout_gravity="center_horizontal"
            android:layout_below="@+id/textView"
            android:layout_alignParentStart="true" />


        <Button
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:background="@drawable/buttonshap"
            android:text="+1"
            android:id="@+id/button"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/edtNome1"
            android:layout_centerHorizontal="true"/>

        <Button
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:background="@drawable/buttonshap"
            android:text="+3"
            android:id="@+id/button2"
            android:layout_gravity="center_horizontal"
            android:layout_below="@+id/edtNome1"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:background="@drawable/buttonshap"
            android:text="+6"
            android:id="@+id/button4"
            android:layout_gravity="center_horizontal"
            android:layout_below="@+id/edtNome1"
            android:layout_alignParentEnd="true" />

        <Button
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:background="@drawable/buttonshap"
            android:text="+12"
            android:id="@+id/button5"
            android:layout_below="@+id/button2"
            android:layout_toEndOf="@+id/button2" />

        <Button
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:background="@drawable/buttonshap"
            android:text="+9"
            android:id="@+id/button3"
            android:layout_below="@+id/button"
            android:layout_toStartOf="@+id/button2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Total: "
            android:layout_below="@+id/button3"
            android:layout_alignStart="@+id/textView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="0"
            android:id="@+id/txtTotal1"
            android:layout_below="@+id/button5"
            android:layout_toStartOf="@+id/button5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Time 1:"
            android:layout_gravity="center_horizontal"
            android:id="@+id/textView"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />


    </RelativeLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.65"
        android:clickable="false" />

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="207dp"
        android:background="#deddda"
        android:alpha="0.9" >

        <Button
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:background="@drawable/buttonshap"
            android:text="+1"
            android:id="@+id/button6"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/edtNome2"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:background="@drawable/buttonshap"
            android:text="+3"
            android:id="@+id/button7"
            android:layout_gravity="center_horizontal"
            android:layout_below="@+id/edtNome2"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:background="@drawable/buttonshap"
            android:text="+6"
            android:id="@+id/button8"
            android:layout_gravity="center_horizontal"
            android:layout_below="@+id/edtNome2"
            android:layout_alignParentEnd="true" />

        <Button
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:background="@drawable/buttonshap"
            android:text="+12"
            android:id="@+id/button9"
            android:layout_below="@+id/button7"
            android:layout_toEndOf="@+id/button7" />

        <Button
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:background="@drawable/buttonshap"
            android:text="+9"
            android:id="@+id/button10"
            android:layout_below="@+id/button6"
            android:layout_toStartOf="@+id/button7" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edtNome2"
            android:hint="Digite o Nome do Time"
            android:layout_gravity="center_horizontal"
            android:layout_below="@+id/textView6"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Total: "
            android:layout_below="@+id/button10"
            android:layout_alignStart="@+id/textView6" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="0"
            android:id="@+id/txtTotal2"
            android:layout_below="@+id/button9"
            android:layout_toStartOf="@+id/button9" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Time 2:"
            android:layout_gravity="center_horizontal"
            android:id="@+id/textView6"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>


</LinearLayout>
